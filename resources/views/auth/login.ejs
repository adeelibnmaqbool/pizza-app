<section class="auth login bg-orange-50 flex justify-center items-center">
    <form action="/login" method="POST" class="w-[500] bg-white rounded shadow-md px-8 py-6 flex flex-col gap-3">
        <h1 class="text-center font-bold text-xl text-orange-500">Login</h1>
        <% if(messages.error){ %> 
            <span class="text-red-600 mt-3"><%= messages.error %> </span>
        <% } %> 
        <div class="form-group flex flex-col gap-3 mb-1">
            <label for="username">Email</label>
            <input type="email" name="email" placeholder="Enter Your Email" class="border rounded-md px-3 py-2 -mt-2 focus:outline-orange-500">
        </div>
        <div class="form-group flex flex-col gap-3 mb-2">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Enter Password" class="border rounded-md px-3 py-2 -mt-2 focus:outline-orange-500">
        </div>
        <div class="form-group flex justify-between items-center w-full">
            <button type="submit" class="inline-block bg-orange-500 text-white ml-2 px-4 py-2 rounded-full hover:bg-orange-600 transition">Login</button>
            <a href="/register" class="text-blue-500 hover:text-blue-600 text-sm">Don't have account?</a>
        </div>
    </form>
</section>