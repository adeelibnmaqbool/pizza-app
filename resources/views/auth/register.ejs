<section class="auth login bg-orange-50 flex justify-center items-center">
    <form action="/register" method="POST" class="w-[500] bg-white rounded shadow-md px-8 py-6 flex flex-col gap-3">
        <h1 class="text-center font-bold text-xl text-orange-500">Register</h1>
        <% if(messages.error){ %> 
        <span class="text-red-600 mt-3"><%= messages.error %> </span>
        <% } %> 
        <div class="form-group flex flex-col gap-3 mb-1">
            <label for="username">Name<span class="text-red-600">*</span></label>
            <input type="text" name="name" value="<%= messages?.name ? messages.name: ''%>" placeholder="Enter Your Name" class="border rounded-md px-3 py-2 -mt-2 focus:outline-orange-500">
        </div>
        <div class="form-group flex flex-col gap-3 mb-1">
            <label for="username">Email<span class="text-red-600">*</span></label>
            <input type="email" name="email" value="<%= messages?.email ? messages.email: ''%>" placeholder="Enter Your Email" class="border rounded-md px-3 py-2 -mt-2 focus:outline-orange-500">
        </div>
        <div class="form-group flex flex-col gap-3 mb-2">
            <label for="password">Password<span class="text-red-600">*</span></label>
            <input type="password" name="password" placeholder="Enter Password" class="border rounded-md px-3 py-2 -mt-2 focus:outline-orange-500">
        </div>
        <div class="form-group flex justify-between items-center w-full">
            <button type="submit" class="inline-block bg-orange-500 text-white ml-2 px-4 py-2 rounded-full hover:bg-orange-600 transition mr-4">Register</button>
            <a href="/login" class="text-blue-500 hover:text-blue-600 text-sm">Already have account?</a>
        </div>
    </form>
</section>