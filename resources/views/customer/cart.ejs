<%if(!session.cart){%>
<section class="empty-cart cart bg-orange-50">
    <div class="container mx-auto px-4 py-10 text-center">
        <div>
            <h2 class="font-bold text-xl">Empty Cart</h2>
            <p class="max-w-sm mx-auto mt-2 mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestias, recusandae?</p>
            <img src="img/empty-cart.png" alt="" class="max-w-sm mx-auto">
        </div>
    </div>
</section>
<% }else{%> 

<section class="fill-cart cart bg-orange-50">
    <div class="container mx-auto px-4 py-10">
        <div class="max-w-xl mx-auto">
            <div class="flex items-center">
                <img src="/img/cart-black.png" alt="Cart" class="mr-4">
                <h2 class="font-medium text-xl">Order Summary</h2>
            </div>
            <hr class="bg-slate-200 h mt-4 w-full">
            <div class="items">
                <% for (let pizza of Object.values(session.cart.items)) { %>
                <div class="item flex justify-between items-center py-4 border-bottom">
                    <div class="flex items-center">
                        <img src="/img/<%= pizza.item.image %> " alt="Pizaa image" class="w-24 mr-2">
                        <div>
                            <h3 class="font-medium"><%= pizza.item.name %> </h3>
                            <small class="uppercase text-sm"><%= pizza.item.size %></small>
                        </div>
                    </div>
                    <div>
                        <p><%= pizza.qty %> Pcs</p>
                    </div>
                    <div>
                        <p class="font-medium">Rs.<%= pizza.item.price * pizza.qty %> </p>
                    </div>

                </div>
                <% } %> 
            </div>
            <hr class="bg-slate-200 h mt-4 mb-4 w-full">
            <div class="text-right">
                <span class="text-md font-bold">Total Amount:</span>
                <span class="text-md font-bold text-orange-500">Rs.<%= session.cart?.totalPrice  %> </span>
            </div>
            <div class="text-right">
                <form class="text-right">
                    <input type="text" placeholder="Phone Number" class="border px-2 py-1 rounded mt-4 focus:outline-orange-500"><br>
                    <input type="text" placeholder="Add Address" class="border px-2 py-1 rounded my-2 focus:outline-orange-500"><br>
                    <!-- <button class="inline-block bg-orange-500 text-white ml-2 px-4 py-2 rounded-full hover:bg-orange-600 transition">Order Now</button> -->
                </form>
                <a href="/login" class="inline-block bg-orange-500 text-white ml-2 px-4 py-2 rounded-full hover:bg-orange-600 transition text-right">Login To Continue</a>
            </div>
        </div>
    </div>
</section>
<%}%>